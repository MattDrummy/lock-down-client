{{outlet}}
<div class="game-lobby">
  <div class="games-list">
    <div class="games-window">
      {{#each model.games as |game|}}
        {{#if game.publicRoom}}
          <p>
            {{game.owner}} -
            {{game.timestamp}} -
            {{#if (is-game-owner user game.owner)}}
              {{#link-to "game" game.ownerRole game.timestamp tagName="button"}}Enter Game {{/link-to}}
              <button type="button" name="button"{{action "deleteGame" game.timestamp}}>Delete Game</button>
            {{else}}
              {{#link-to "game" (opposite-of-owner-role game.ownerRole) game.timestamp tagName="button"}}Enter Game{{/link-to}}
              <button type="button" name="button" {{action "joinGame" game.timestamp}}>Join Game</button>
            {{/if}}
          </p>
        {{/if}}
      {{/each}}
    </div>
  </div>
  <div class="lobby-chat-area">
    {{
      lobby-chat-box
      user=user
      socketIOService=socketIOService
      url=url
      lobbyChatMessages=lobbyChatMessages
      lobby=lobby
      store=store
    }}
  </div>
</div>
