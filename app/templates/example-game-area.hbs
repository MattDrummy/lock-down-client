<div class="game-area">
  <div class="command-console">
    <div class="console-window">
      <p>C://</p>
    </div>
    <div class="input-box">
      <input type="text" name="" value={{consoleInput}} placeholder="console input">
      <button class="console-button" type="button" name="button">Enter</button>
    </div>
  </div>
  <div class="game-block">
    <div class="game-info">

    </div>
    <div class="chat-box">
      <div class="chat-window">
        <p>user [timestamp] : message</p>
      </div>
      <div class="input-box">
        <input type="text" name="" value={{chatInput}} placeholder="chat input">
        <button type="button" name="button" class="chat-button">Send</button>
      </div>
    </div>
  </div>
</div>
